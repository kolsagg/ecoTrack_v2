# ===================================
# Supabase Bağlantı Bilgileri
# ===================================
# Supabase Dashboard → Settings → API'den alın
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ===================================
# Uygulama Ortamı
# ===================================
ENVIRONMENT=dev
DEBUG=True

# ===================================
# Frontend & CORS Ayarları
# ===================================
# Flutter frontend URL
FRONTEND_URL=http://localhost:8080
# CORS için izin verilen origin'ler
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]
# Web receipt görüntüleme için base URL
WEB_BASE_URL=http://localhost:8000

# ===================================
# Ollama AI Configuration
# ===================================
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=qwen2.5:3b
OLLAMA_TIMEOUT=30
OLLAMA_ENABLED=true

# ===================================
# JWT ve Güvenlik Ayarları
# ===================================
# Minimum 32 karakter, secrets.token_urlsafe(64) ile oluşturun
JWT_SECRET_KEY=your_jwt_secret_key_here_minimum_32_characters
ACCESS_TOKEN_EXPIRE_MINUTES=30
FORCE_HTTPS=False

# ===================================
# Push Notifications (Firebase)
# ===================================
# Firebase Console → Project Settings → Cloud Messaging'den alın
FCM_SERVER_KEY=your_fcm_server_key_here
FCM_SENDER_ID=your_fcm_sender_id

# ===================================
# Webhook Ayarları
# ===================================
WEBHOOK_TIMEOUT=30
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_RETRY_DELAY=60

# ===================================
# Rate Limiting
# ===================================
RATE_LIMIT_CALLS=100
RATE_LIMIT_PERIOD=60

# ===================================
# Logging Ayarları
# ===================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# ===================================
# Scheduler Ayarları
# ===================================
SCHEDULER_ENABLED=True